                android:entries="@array/question10_answers" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1630px"
                android:onClick="CheckClick"
                android:text="@string/check_name" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>