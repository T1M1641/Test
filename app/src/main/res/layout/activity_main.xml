                android:text="@string/question5"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_marginTop="810px"
                android:layout_height="wrap_content"
                android:entries="@array/question5_answers" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="860px"
                android:text="@string/question6"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="match_parent"
                android:layout_marginTop="930px"
                android:layout_height="wrap_content"
                android:entries="@array/question6_answers" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="990px"
                android:text="@string/question7"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner7"
                android:layout_width="match_parent"
                android:layout_marginTop="1060px"
                android:layout_height="wrap_content"
                android:entries="@array/question7_answers" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
